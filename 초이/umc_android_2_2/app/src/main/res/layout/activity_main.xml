<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ui_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facebook"
            android:textColor="@color/facebook"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:src="@drawable/ic_baseline_message_24"
            app:civ_circle_background_color="@color/light_gray"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:src="@drawable/ic_baseline_search_24"
            app:civ_circle_background_color="@color/light_gray"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:src="@drawable/ic_baseline_add_24"
            app:civ_circle_background_color="@color/light_gray"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ui_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_toolbar"
        android:weightSum="6"
        android:padding="8dp">

        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_baseline_home_24"
            android:background="@null"
            android:layout_weight="1"
            >
        </ImageButton>
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_baseline_airplay_24"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_baseline_feed_24"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_baseline_menu_24"
            android:background="@null"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:id="@+id/ui_nav_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_nav"
        android:background="@color/nav_color"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ui_think"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ui_nav_line"
        android:background="@color/white"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/think_profile"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_baseline_think_account_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_think"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_oval"
            android:backgroundTint="@null"
            android:text="무슨 생각을 하고 계신가요?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/think_profile"
            app:layout_constraintStart_toEndOf="@+id/think_profile"
            app:layout_constraintTop_toTopOf="@+id/think_profile"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_baseline_perm_media_24"
            app:layout_constraintBottom_toBottomOf="@+id/btn_think"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_think"
            app:layout_constraintTop_toTopOf="@+id/btn_think" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/ui_think_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_think"
        android:background="@color/nav_color" />
    <LinearLayout
        android:id="@+id/ui_btn_storyandreels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ui_think_line">
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="스토리"
            android:textColor="@color/facebook"
            android:backgroundTint="@color/white"
            android:id="@+id/btn_grid"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="릴스"
            android:textColor="@color/nav_color"
            android:backgroundTint="@color/white"
            android:id="@+id/btn_table"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/ui_storyandreels"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:layout_constraintTop_toBottomOf="@id/ui_btn_storyandreels"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:id="@+id/ui_storyandreels_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_storyandreels"
        android:background="@color/nav_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ui_storyandreels_line">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="게시물 공간"
                android:textSize="50sp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>